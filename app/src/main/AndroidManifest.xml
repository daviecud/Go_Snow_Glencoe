<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gosnow_glencoe">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BaseActivity"></activity>
        <activity android:name=".PasswordResetActivity" />
        <activity android:name=".Sign_UpActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".SnowChatActivity" />
        <activity android:name=".DirectionsActivity" />
        <activity android:name=".BusinessActivity" />
        <activity android:name=".ResortActivity" />
        <activity android:name=".SportActivity" />
        <activity android:name=".SnowReportActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>